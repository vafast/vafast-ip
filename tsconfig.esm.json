{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ESNext", "DOM", "ScriptHost"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "types": ["bun-types"],
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist"]
}
